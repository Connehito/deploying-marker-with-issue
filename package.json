{
  "name": "deploying-marker-with-issue",
  "version": "1.0.0",
  "private": true,
  "description": "This action checks, applies and removes the \"Deploying\" label of GitHub Issue that indicating the deployment status.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Connehito/deploying-marker-with-issue.git"
  },
  "keywords": [
    "deployment"
  ],
  "author": "Connehito",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@types/node-fetch": "^2.6.2",
    "ajv": "^8.11.0",
    "json-schema-to-ts": "^2.5.3",
    "node-fetch": "^3.2.6"
  },
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@typescript-eslint/parser": "^5.30.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.18.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.2",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
