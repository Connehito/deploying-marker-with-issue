{
  "name": "deploying-marker-with-issue",
  "version": "1.0.0",
  "private": true,
  "description": "This action checks, applies and removes the \"Deploying\" label of GitHub Issue that indicating the deployment status.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Connehito/deploying-marker-with-issue.git"
  },
  "keywords": [
    "deployment"
  ],
  "author": "Connehito",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@types/node-fetch": "^2.6.2",
    "ajv": "^8.12.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.59.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.41.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
